@using System.Security.Principal
@tagHelperPrefix "th:"
@addTagHelper "*, Microsoft.AspNet.Mvc.TagHelpers"

@if (User.Identity.IsAuthenticated)
{
    <th:form asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <th:a asp-controller="Account" asp-action="Manage" title="Manage">Hello @User.GetUserName()!</th:a>
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    </th:form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><th:a id="registerLink" asp-controller="Account" asp-action="Register">Register</th:a></li>
        <li><th:a id="loginLink" asp-controller="Account" asp-action="Login">Log in</th:a></li>
    </ul>
}
