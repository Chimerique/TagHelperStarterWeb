@model TagHelperStarterWeb.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            <th:form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewBag.ReturnUrl" method="post" class="form-horizontal" role="form">
                <h4>Use a local account to log in.</h4>
                <hr />
                <th:div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></th:div>
                <div class="form-group">
                    <th:label asp-for="UserName" class="col-md-2 control-label"></th:label>
                    <div class="col-md-10">
                        <th:input asp-for="UserName" class="form-control" />
                        <th:span asp-validation-for="UserName" class="text-danger"></th:span>
                    </div>
                </div>
                <div class="form-group">
                    <th:label asp-for="Password" class="col-md-2 control-label"></th:label>
                    <div class="col-md-10">
                        <th:input asp-for="Password" class="form-control" />
                        <th:span asp-validation-for="Password" class="text-danger"></th:span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <th:input asp-for="RememberMe" />
                            <th:label asp-for="RememberMe"></th:label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log in" class="btn btn-default" />
                    </div>
                </div>
                <p>
                    <th:a asp-action="Register">Register</th:a> if you don't have a local account.
                </p>
            </th:form>
        </section>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
