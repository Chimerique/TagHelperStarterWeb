@using System.Security.Claims
@model TagHelperStarterWeb.Models.ManageUserViewModel

<p>You're logged in as <strong>@User.GetUserName()</strong>.</p>

<th:form asp-controller="Account" asp-action="Manage" method="post" class="form-horizontal" role="form">
    <h4>Change Password Form</h4>
    <hr />
    <th:div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></th:div>
    <div class="form-group">
        <th:label asp-for="OldPassword" class="col-md-2 control-label"></th:label>
        <div class="col-md-10">
            <th:input asp-for="OldPassword" class="form-control" />
            <th:span asp-validation-for="OldPassword" class="text-danger"></th:span>
        </div>
    </div>
    <div class="form-group">
        <th:label asp-for="NewPassword" class="col-md-2 control-label"></th:label>
        <div class="col-md-10">
            <th:input asp-for="NewPassword" class="form-control" />
            <th:span asp-validation-for="NewPassword" class="text-danger"></th:span>
        </div>
    </div>
    <div class="form-group">
        <th:label asp-for="ConfirmPassword" class="col-md-2 control-label"></th:label>
        <div class="col-md-10">
            <th:input asp-for="ConfirmPassword" class="form-control" />
            <th:span asp-validation-for="ConfirmPassword" class="text-danger"></th:span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change password" class="btn btn-default" />
        </div>
    </div>
</th:form>
